<Page x:Class="PPM._05.Pages.WorkersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPM._05.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkersPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="Сотрудники" HorizontalContentAlignment="Center" FontSize="20"/>
        <DataGrid x:Name="WorkersGrid" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="30,30,0,0"/>
        <DataGrid x:Name="ScheduleGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="30,30,0,0"/>
        <Button x:Name="SaveBtn" Content="Сохранить" Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Margin="40,0,40,0" Click="SaveBtn_Click"/>
        <Button x:Name="ExitBtn" Content="Выйти" Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" Margin="150,30,40,0" Background="Red" Click="ExitBtn_Click"/>
    </Grid>
</Page>
